<div class="fixed inset-0 flex items-center justify-center bg-gray-50/50 z-[-1] px-4">
  <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-2xl shadow-xl border border-gray-100 z-10">

    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-gray-900">Sign up</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-4">
        <div class="field">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-orange-400 focus:border-orange-400 focus:z-10 sm:text-sm" %>
        </div>

        <div class="field">
          <div class="flex justify-between">
            <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          </div>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-orange-400 focus:border-orange-400 focus:z-10 sm:text-sm" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions pt-2">
          <%= f.submit "Log in", 
            class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-bold rounded-lg text-white bg-orange-500 hover:bg-orange-500 focus:outline-none focus:ring-1 focus:ring-offset-2 focus:ring-orange-400 transition duration-200 transform active:scale-95 cursor-pointer shadow-md" %>
        </div>
      <% end %>

      <div class="text-center pt-4 border-t border-gray-100">
        <div class="text-sm text-gray-600">
          <%= render "devise/shared/links" %>
        </div>
      </div>

    </div>
  </div>
</div>