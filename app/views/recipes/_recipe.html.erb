<div id="<%= dom_id recipe %>" class="max-w-4xl mx-auto mb-12 bg-white border border-gray-200 shadow-sm rounded-2xl overflow-hidden font-sans">

  <% if recipe.image.attached? %>
    <%= image_tag recipe.image, class: "w-full h-96 object-cover rounded-t-lg" %>
  <% else %>
    <div class="w-full h-64 bg-gray-50 flex items-center justify-center rounded-t-lg">
      <span class="text-6xl text-gray-300">ğŸ½ï¸</span>
    </div>
  <% end %>

  <%# HornÃ¡ ÄasÅ¥ s titulkom %>
  <div class="bg-gray-50/50 p-8 border-b border-gray-100 text-center">

    <h2 class="text-3xl font-bold text-gray-900 mb-3 tracking-tight">
      <%= recipe.title %>
    </h2>
    <div class="flex flex-wrap justify-center gap-6 text-sm text-gray-600">
      <span class="flex items-center">â± Prep time: <strong class="ml-1 text-gray-900"><%= recipe.prep_time %> min</strong></span>
      <span class="flex items-center">ğŸ”¥ Cook time: <strong class="ml-1 text-gray-900"><%= recipe.cook_time %> min</strong></span>
      <span class="flex items-center">ğŸ”’ Private: <strong class="ml-1 text-gray-900"><%= recipe.is_private ? 'Yes' : 'No' %></strong></span>
      <span class="flex items-center">ğŸ½ Calories: <strong class="ml-1 text-gray-900"><%= recipe.calories.presence || "-" %> kcal</strong></span>
    </div>
  </div>

  <div class="p-8">
    <%# PouÅ¾Ã­vateÄ¾skÃ© akcie (Edit, Delete, Save) %>
    <% if user_signed_in? %>
      <div class="flex items-center justify-end space-x-4 mb-8 pb-4 border-b border-gray-100">
        <% if recipe.user == current_user %>
          <%= link_to 'Edit', 
                      edit_recipe_path(recipe), 
                      class: 'bg-yellow-600 hover:bg-yellow-700 text-white font-bold py-2.5 px-6 rounded-lg text-sm shadow-sm transition duration-200 transform hover:scale-105 active:scale-95' %>
          <%= button_to 'Delete', 
                        recipe_path(recipe), 
                        method: :delete, 
                        class: 'bg-red-600 hover:bg-red-700 text-white font-bold py-2.5 px-6 rounded-lg text-sm shadow-sm transition duration-200 transform hover:scale-105 active:scale-95' %>

        <% end %>

        <div class="ml-4">
          <% if recipe.user != current_user || recipe.is_private == false %>
            <% if current_user.saved_recipes.include?(recipe) %>
              <div div class="flex items-center space-x-3">
                <div>
                  <span class="bg-green-500 hover:bg-green-600 text-white font-bold py-2.5 px-6 rounded-lg text-sm shadow-sm transition duration-200 transform hover:scale-105 active:scale-95">Saved! âœ”ï¸</span>
                </div>
                <%= button_to 'Remove from my cookbook', 
                              remove_from_cookbook_recipe_path(recipe), 
                              method: :delete, 
                              class: 'bg-gray-100 hover:bg-gray-200 text-black font-bold py-2.5 px-6 rounded-lg text-sm shadow-sm transition duration-200 transform hover:scale-105 active:scale-95' %>
              </div>
            <% else %>
              <%= button_to 'Save to my cookbook', 
                            save_to_cookbook_recipe_path(recipe), 
                            method: :post, 
                            class: 'bg-orange-400 hover:bg-orange-500 text-white font-bold py-2.5 px-6 rounded-lg text-sm shadow-sm transition duration-200 transform hover:scale-105 active:scale-95' %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
      <%# Ingrediencie %>
      <div class="md:col-span-1">
        <h3 class="font-bold text-xl text-gray-800 mb-6 border-b-2 border-orange-500 inline-block">Ingredients</h3>
        <% if recipe.recipe_ingredients.any? %>
          <ul class="space-y-4 text-gray-700">
            <% recipe.recipe_ingredients.each do |ri| %>
              <li class="flex items-start border-b border-gray-50 pb-2">
                <span class="font-bold text-orange-600 mr-2"><%= ri.amount %> <%= ri.unit %></span>
                <span><%= ri.ingredient.name %></span>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="italic text-gray-400 text-sm">No ingredients added so far.</p>
        <% end %>
      </div>

      <%# InÅ¡trukcie %>
      <div class="md:col-span-2 border-l border-gray-100 pl-0 md:pl-10">
        <h3 class="font-bold text-xl text-gray-800 mb-6 border-b-2 border-orange-500 inline-block">Instructions</h3>
        <div class="prose prose-orange leading-relaxed text-gray-800 text-lg">
          <%= simple_format(recipe.instructions) %>
        </div>
      </div>
    </div>

    <%# Tagy naspodu %>
    <div class="mt-12 pt-6 border-t border-gray-100">
      <h3 class="text-center text-xs font-bold uppercase tracking-widest text-gray-400 mb-4">Tags</h3>
      <div class="flex flex-wrap gap-2 justify-center">
        <% if recipe.tags.any? %>
          <% recipe.tags.each do |tag| %>
            <span class="bg-orange-50 text-orange-700 text-xs px-3 py-1.5 rounded-md border border-orange-100 font-medium">
              <%= tag.name %>
            </span>
          <% end %>
        <% else %>
          <p class="text-xs text-stone-400 italic">No tags added so far.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>