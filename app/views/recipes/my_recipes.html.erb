<div class="container mx-auto p-4">
  <h1 class="text-3xl font-bold mb-6 text-gray-800">
    My recipes
    <span class="text-sm font-normal text-gray-500">(Public and private)</span>
  </h1>

  <div class="flex justify-end mb-4">
    <%= link_to 'Add new recipe', new_recipe_path, class: 'bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-200' %>
  </div>

  <div class="space-y-4">
    <% if @recipes.any? %>
      <%= render @recipes %>
    <% else %>
      <p class="text-gray-500">No recipes created so far.</p>
    <% end %>
  </div>
</div>