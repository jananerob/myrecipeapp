<p style="color: green"><%= notice %></p>

<h1>Recipes</h1>

<div id="recipes">
  <% @recipes.each do |recipe| %>
    <%= link_to recipe, class: 'text-black text-decoration-none' do %>
      <%= render recipe %>
    <% end %>
  <% end %>
</div>
<div class='d-grid fixed-bottom p-4'>
  <%= link_to "New recipe", new_recipe_path, class: 'btn btn-primary py-3 rounded-pill shadow fs-6 fw-bold' %>
</div>