<div class="container mx-auto p-4">
  <h1 class="text-3xl font-bold mb-6 text-gray-800">
    <%= @recipe.title %>
    <span class="text-sm font-normal text-gray-500"></span>
  </h1>

  <div class="flex justify-between items-center mt-8 mb-8 pt-6 border-t border-gray-100">
    <%= link_to "Back to recipes", recipes_path, 
              class: 'bg-gray-100 hover:bg-gray-200 text-gray-800 font-bold py-2.5 px-6 rounded-lg text-sm shadow-sm transition duration-200 transform hover:scale-105 active:scale-95' %>

    <% if user_signed_in? %>
      <%= link_to 'Add new recipe', new_recipe_path, 
                class: 'bg-orange-400 hover:bg-orange-500 text-white font-bold py-2.5 px-6 rounded-lg text-sm shadow-sm transition duration-200 transform hover:scale-105 active:scale-95' %>
    <% end %>
  </div>

  <%= render @recipe %>

</div>